{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": ["src/index.ts", "src/**/*", "src/common/typings/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
